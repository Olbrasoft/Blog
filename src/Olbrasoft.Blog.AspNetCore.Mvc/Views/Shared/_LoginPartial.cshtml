@using Microsoft.AspNetCore.Identity
@using Olbrasoft.Blog.Data.Entities.Identity
@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager
@inject SharedLocalizer Localizer

<ul class="navbar-nav ">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Administration" asp-controller="Home" asp-action="Index" localize-title="Administration"><i class="icon-fa-admin"></i> <localize>Administration</localize></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Administration" asp-controller="Account" asp-action="LogOut" localize-title="Logout"><i class="fa fa-sign-out fa-fw"></i> <localize>Logout</localize></a>
        </li>
    }
    else
    {

        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Register" ? "active" : "")">
            <a class="nav-link" asp-area="Administration" asp-controller="Account" asp-action="Register" title="@Localizer["Register"]"  localizer="@Localizer" localize>Register</a>
        </li>
        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Login" ? "active" : "")">
            <a class="nav-link" asp-area="Administration" asp-controller="Account" asp-action="Login" title="@Localizer["Login"]" localizer="@Localizer" localize>Login</a>
        </li>
    }
</ul>