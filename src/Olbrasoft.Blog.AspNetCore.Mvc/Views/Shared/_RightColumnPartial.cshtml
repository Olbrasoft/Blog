@model RightColumnViewModel

<div class="col-md-4">

    <div class="card my-4">
        <h5 class="card-header" localize>Search</h5>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.CurrentQuery))
            {
                <a asp-area="" asp-controller="Home" asp-action="Index" localize-title="Remove filter"> <i class="fa fa-times"></i> <localize>Clear filter</localize></a>
            }

            <form asp-area="" asp-controller="Home" asp-action="Index" method="get">

                <div class="input-group">

                    <input type="text" class="form-control" localize-placeholder="Search for..." value="@Model.CurrentQuery" name="search" />
                    <span class="input-group-append">
                        <button class="btn btn-primary" type="submit" localize>Go!</button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <div class="card my-4">
        <h5 class="card-header"><i class="fa fa-sitemap fa-fw"></i> <localize>Categories</localize></h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var category in Model.Categories.Item1)
                        {
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-search="searchByCategoryId:@category.Id">@category.Name</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var category in Model.Categories.Item2)
                        {
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-search="searchByCategoryId:@category.Id">@category.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="card my-4">
        <h5 class="card-header"><i class="fa fa-tags fa-fw"></i> <localize>Tags</localize></h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var tag in Model.Tags.Item1)
                        {
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-search="SearchByTagId:@tag.Id">@tag.Label</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul class="list-unstyled mb-0">
                        @foreach (var tag in Model.Tags.Item2)
                        {
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-search="SearchByTagId:@tag.Id">@tag.Label</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>